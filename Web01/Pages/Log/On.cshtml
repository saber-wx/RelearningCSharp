@model LogOnModel
@{
    ViewData["Title"] = "登录";
    Layout = "_Layout";
    @*<link rel="stylesheet" type="text/css" href="~/css/LogInStyle.css" />*@
    @*<link href="//fonts.googleapis.com/css?family=Cormorant+SC:300,400,500,600,700" rel="stylesheet">
