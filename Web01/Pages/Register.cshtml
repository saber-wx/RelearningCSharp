@page
@model Web01.Pages.Register
@{ Layout = "_Layout"; }

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>

    </title>
</head>
<body class="hold-transition register-page" onload="start()">
    <div class=""></div>
    <div class="register-box">

        <form onsubmit="passwordConfirm()" method="post" asp-page="/Register">

            <div class="text-right" style="padding-top:10px;">
                <a href="#"><span class="fa fa-question-circle"></span> 为什么需要邀请</a>
            </div>

            <div class="form-group">
                <div class="col-xs-2">
                    <label>邀请人：</label>（* 必填，<a title="" class="text-info" href="/User/Inviters" data-original-title="点击由系统推荐" data-toggle="tooltip">没有邀请人</a>）
                    <input name="InviterName" class="form-control" id="InviterName" type="text" placeholder="他的用户名，模糊查询只能从头开始" value="" zyf-search-by-username="" data-val-required="* 邀请人不能为空" data-val-length-max="20" data-val-length="* 邀请人的长度不能大于20" data-val="true">
                    <div zyf-search-username-result=""></div>
                    <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="InviterName"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-2">

                    <label>邀请码：（* 必填）</label>
                    <input name="InviteCode" class="form-control" id="InviteCode" type="text" placeholder="4位数字" value="" data-val-required="* 邀请码不能为空" data-val="true" data-val-regex-pattern="[0-9]{4}" data-val-regex="* 邀请码只能是4位数字">
                    <span class="field-validation-valid" data-valmsg-replace="true" data-valmsg-for="InviteCode"></span>
                </div>
            </div>

            <div class="form-group">
                <label>用户名：（* 必填） <input asp-for="UserName" placeholder="登录用户名，可修改，不可重复" class="form-control" /></label>
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div>
                <label>性别:</label>
                <label><input type="radio" value="male" name="gender">男</label>
                <label><input type="radio" value="female" name="gender">女</label>
            </div>
            <div class="form-group">
                <label>密码：（* 必填） <input type="password" asp-for="Password" class="form-control" placeholder="6-16位，只可包含英文字母及数字 " /></label>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group">
                <label>验证密码：（* 必填） <input type="password" class="form-control" placeholder="和密码相同 " /></label>
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="bs-example" data-example-id="btn-variants">
                <button type="submit" class="btn btn-primary ">注册</button>
                <button type="reset" class="btn btn-default">重置</button>
            </div>

        </form>
        <a href="all-admin-login.html" class="text-center">我有账号，现在就去登录</a>
    </div>
</body>
</html>
