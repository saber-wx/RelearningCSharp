@page
@{ Layout = "_Layout"; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>注册界面</title>
</head>

<body onload="start()">
    <div align="center">
        @*<span id="flicker" class="glyphicon glyphicon-bell"></span>*@

        <div class="col-lg-4 col-md-5">
            <div class="container" style="margin-bottom: 16px;">
                <div class="row">
                    <a class="visible-sm visible-xs pull-right" show-introduction="">
                        <span class="fa fa-question-circle"></span><span style="margin-left:4px;">
                            说明
                        </span>
                    </a>
                </div>
            </div>



            <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="introductionLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <h4 class="modal-title" id="introductionLabel"></h4>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">知道了</button>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <form onsubmit="passwordConfirm()">
            <label>用户名:<input type="text" name="username" /></label><br />
            <p style="color:red;display:none">用户名重复</p>
            <label>密码:<input type="password" name="password" /></label><br />
            <label>确认密码:<input type="password" /></label><br />
            <div>
                <label>性别:</label>
                <label><input type="radio" value="male" name="gender">男</label>
                <label><input type="radio" value="female" name="gender">女</label>
            </div>
            <div>
                <label>来自:</label>
                <select neme="province">
                    <option value="js">江苏</option>
                    <option value="hn">湖南</option>
                    <option value="hlj">黑龙江</option>
                </select>
            </div>
            <div>
                <label>自我介绍:</label><br />
                <textarea name="self-introduction"></textarea>
            </div>
            <div>
                <input class="register-submits" type="submit" value="提交" />
                <input class="register-resets" type="reset" value="重置" />
                <label><input class="register-checkboxs" type="checkbox" id="remember" />记住我</label>
            </div>
        </form>
    </div>

</body>

</html>

